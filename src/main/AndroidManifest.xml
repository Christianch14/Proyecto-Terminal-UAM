<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.app_cf">
    <!-- Permission to Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to Bluetooth Module -->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.APP_CF"
        tools:targetApi="31">
        <activity
            android:name=".View.DetailServiceActivity"
            android:exported="false"
            android:label="@string/title_activity_detail_service"
            android:theme="@style/Theme.APP_CF" />
        <activity
            android:name=".View.DeviceListActivity"
            android:exported="false"
            android:label="@string/title_activity_device_list"
            android:theme="@style/Theme.APP_CF" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.APP_CF">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>